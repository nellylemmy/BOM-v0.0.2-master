            <li><a href="/blog">Blog</a></li>
            <li><a href="/contacts" class="link-contact">Contact B.O.M</a></li>
        </ul>
    </div>
    <div class="social">
        <ul>
            <li><a href="/youtube"><i class="fab fa-facebook"></i></a></li>
            <li><a href="/instagram"><i class="fab fa-youtube"></i></a></li>
            <li><a href="/facebook"><i class="fab fa-instagram"></i></a></li>
        </ul>
    </div>
</div>

