<%- include('header',{
    title:'Agent Signup'
}); -%>

    
    <div class="link"><a href="/"> &lAarr; BACK</a></div><br><br>
    <div class="container">
        <h1>üë®‚Äçü¶≤ Agent Sign Up</h1>
        <form action="" method="POST">
    
            <div class="form-group mb-2">
                <label for="firstNameInput">First Name <span class="star">*</span></label>
                <input name="firstName" type="text" class="form-control input" id="firstNameInput" placeholder="John" required>
            </div>
    
            <div class="form-group mb-2">
                <label for="lastNameInput">Last Name <span class="star">*</span></label>
                <input name="lastName" type="text" class="form-control input" id="lastNameInput" placeholder="Doe" required>
            </div>
    
            <div class="form-group mb-2">
                <label for="phone">Mobile Number <span class="star">*</span> </label>
                <input name="phone" type="number" class="form-control input" id="phone" placeholder="+254 741642093" required>
            </div>
    
            <div class="form-group mb-2">
                <label for="idnumber">ID Number <span class="star">*</span> </label>
                <input name="idnumber" type="number" class="form-control input" id="idnumber" placeholder="Entert ID Number" required>
            </div>
    
            <div class="form-group mb-2">
                <label for="emailInput">Email <span class="star">*</span></label>
                <input name="email" type="email" class="form-control input" id="emailInput" placeholder="example@gmail.com" required>
            </div>
    
            <div class="form-group mb-2">
                <label for="passwordInput">Password <span class="star">*</span> </label>
                <input name="password" type="password" class="form-control input" id="passwordInput" placeholder="Password" required>
            </div>
    
            <div class="form-group mb-2">
                <label for="confirmPasswordInput">Confirm Password <span class="star">*</span></label>
                <input name="confirmPassword" type="password" class="form-control input" id="confirmPasswordInput"
                    placeholder="Re-enter your password here" required>
            </div>
    
    
    
    
    
    
    
    
